package main;

import java.io.File;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStream;

public class MainClass {

	public static void main(String[] args) {
		InputStream is = MainClass.class.getResourceAsStream("/file.txt");
		char current;
		try {
			FileOutputStream output = new FileOutputStream("E:/SpringProject/output.txt");
			while (is.available() > 0) {
				current = (char) is.read();
				System.out.print(current);
				if ((is.read() <= 65 && is.read() >= 90)
						|| (is.read() <= 97 && is.read() >= 122)) {
					int c = is.read();
					c -= 65;
					c = (c + 4) % 26;
					c += 65;
					current = (char) (c);
					output.write(c);
				}
				System.out.print(current);
				output.close();
			}
		} catch (IOException e) {
			e.printStackTrace();
		}

	}

}
